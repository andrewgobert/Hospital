<!DOCTYPE mapper com.mycompany.hospital.dao.AddressDao PUBLIC '-??mybatis.org//DTD Mapper 3.0//EN' 'null'>


<mapper namespace = "com.mycompany.hospital.dao.AddressDao">
    <sql id="body">
        a.idaddress as id
        a.number as number
        a.street as street
        a.city as city
        a.state as state
        a.zip as zip
    </sql>
    
    <select id="getById" resultMap="addressResultMap">
        SELECT
        <include refid="body"/>
        FROM
            address a
        WHERE id = #{id}
    </select>
    
    <resultMap id="addressResultMap" type="com.mycompany.hospital.binary.address" autoMapping="false">
        <id column="idaddress"/>
        <result column="number"/>
        <result column="street"/>
        <result column="city"/>
        <result column="state"/>
        <result column="zip"/>
    </resultMap>
</mapper>

